<%= simple_form_for(@profile, url: user_profile_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, label: "暱稱" %>
    <%= f.input :gender, 
                label: "性別", 
                as: :radio_buttons, 
                collection: [[:male, "男生"], [:female, "女生"]], 
                label_method: :last,
                value_method: :first,
                item_wrapper_class: 'radio-inline radio-vertical-align', 
                required: true %>
    <%= f.input :birthdate, as: :date_picker, label: "出生日期" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
<script>
$(document).ready(function() {
  $('#profile_birthdate').datetimepicker({
    format: "YYYY/MM/DD"
  });
});
</script>
