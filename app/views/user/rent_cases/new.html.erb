<h1>New Rent Case</h1>
<% if @update_apartment == true %>
  <%= @apartment.discription %>
  <%= simple_form_for(@rent_case, url: user_apartment_rent_cases_path) do |f| %>
    <%= render 'form', f: f %>
  <% end %>
<% else %>
  <%= simple_form_for(@rent_case, url: user_rent_cases_path) do |f| %>
    <%= render 'form', f: f, apartment: @apartment %>
  <% end %>
<% end %>


<%= link_to 'Back', user_apartments_path %>
